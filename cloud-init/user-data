#cloud-config
	users:
	  - name: root
		ssh_authorized_keys:
		  - <pub-key>
	
	user: cloud-user
	chpasswd:
	  list: |
		root:testtest
		cloud-user:testtest
	  expire: False
	ssh_pwauth: True
	
	growpart:
	  mode: auto
	  devices: ["/"]
	  ignore_growroot_disabled: false
	
	runcmd:
	  - sed -i '/PermitRootLogin prohibit-password/a\PermitRootLogin yes' /etc/ssh/sshd_config
	  - sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config
	
	power_state:
	  mode: reboot
	  message: cloud-init finished
	  timeout: 30
	  condition: True